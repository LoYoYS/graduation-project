page{
    width: 100%;
    height: 100%;
    background: url(https://pic1.imgdb.cn/item/6362578916f2c2beb1e754f4.jpg) no-repeat;
    background-size: contain;
}
.vessel{
    width: 100%;
    height: 100%;
    display: flex;
    color: white;
    margin-top: 200px;
    align-items: center;
    flex-direction: column;
    border-radius: 100rpx 100rpx 0 0;
    background-image: linear-gradient(45deg,rgb(61,81,252,0.95),rgb(0,254,244,0.95));
}
.info{
    width: 100%;
    height: 25%;
    display: flex;
    margin-top: 50px;
    font-weight: bold;
    flex-direction: column;
    justify-content: space-around;
}
.top,.bottom{
    display: flex;
    margin-left: 30rpx;
}
.info>.top>.logo{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    border: 1rpx solid white;
    box-shadow: 1rpx 1rpx 1rpx gainsboro;
}
.info>.top>.logo>image{
    width: 80rpx;
    height: 80rpx;
    margin: 0 0 2px 2px;
}
.top .title{
    font-size: 40rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
.bottom{
    flex-direction: column;
}
.bottom>.pl{
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
}
.introduce{
    width: 95%;
    text-align: center;
}

