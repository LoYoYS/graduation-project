.father{
    width:100%;
    height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
}
.vessel{
    width: 100%;
    min-height: 60%;
    display: flex;
    color: white;
    margin-top: 350px;
    align-items: center;
    flex-direction: column;
    border-radius: 100rpx 100rpx 0 0;
    background-image: linear-gradient(45deg,rgb(61,81,252,0.95),rgb(0,254,244,0.95));
}
.info{
    width: 100%;
    height: 20%;
    display: flex;
    margin-top: 50px;
    font-weight: bold;
    flex-direction: column;
    justify-content: space-around;
}
.top,.bottom{
    display: flex;
    margin-left: 30rpx;
}
.info>.top>.logo{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 120rpx;
    height: 120rpx;
    border: 1rpx solid white;
    box-shadow: 1rpx 1rpx 1rpx gainsboro;
}
.info>.top>.logo>image{
    width: 80rpx;
    height: 80rpx;
    margin: 0 0 2px 2px;
}
.top .title{
    font-size: 40rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.bottom{
    flex-direction: column;
    justify-content: space-around;
    height: 60px;
    margin: 15px 0 20px 15px;
}
.bottom>.p1{
    display: flex;
    margin: 10px 0px;
}
.introduce{
    width: 93%;
    margin-top: 10px;
    box-sizing: border-box;
    line-height: 22px;
}

