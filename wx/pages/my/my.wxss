page,.my_container{
    height: 100%;
}
.top{
    height: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: linear-gradient(112.15334473777807deg, rgba(48, 245, 251,1) 5.533854166666667%,rgba(23, 142, 203,1) 96.67968749999999%);
    box-shadow: 5px 5px 10px gainsboro;
}
.picturebox{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
}
.picturebox image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin-left: 50rpx;
}
.text_box{
    color: white;
    margin-left: 50rpx;
    margin-top: 30rpx;
    display: flex;
    height: 130rpx;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: space-between;
}
.text_box text:first-child{
    font-size: 50rpx;
}
.btn{
    width: 300rpx !important;
    background-color: white;
    color: rgb(12, 138, 177);
    font-weight: bold;
    box-shadow: 1px 1px 3px gray inset;
}
.bottom{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70%;
}
.bottom .list{
    display: flex;
    justify-content: space-evenly;
    flex-direction: column;
    width: 95%;
    height: 80%;
    border-radius: 5%;
    box-shadow: 5px 5px 10px gainsboro;
}