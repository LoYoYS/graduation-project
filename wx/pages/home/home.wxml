<cu-custom style="color: white;" isHome="{{true}}">
    <view slot="content">来学车吧</view>
</cu-custom>
<view class="top">
        <view>Hi ~</view>
        <view>欢迎使用</view>
        <view>来学车吧小程序</view>
        <view class="line">
             <view></view>
             <view></view>
        </view>
        <view>
            <view></view> 
        </view>
</view>
<view class="vessel">
    <view class="funList">功能列表</view>
    <view class="list" wx:if="{{isStudent==1 || isStudent==0}}">
            <view class="bg-gradual-blue" catchtap="gotoOrder">
                <view style="font-weight: bold;">YUYUE</view>
                <view>预约学车</view>
                <view class="icon">
                    <van-icon name="/icon/car1.png" size="35px"></van-icon>
                </view>
            </view>
            <view class="bg-gradual-purple" catchtap="gotoNewPage" data-index="{{1}}">
                <view style="font-weight: bold;">RECORD</view>
                <view>预约记录</view>
                <view class="icon cuIcon-formfill"></view>
            </view>
            <view class="bg-gradual-pink" catchtap="gotoNewPage" data-index="{{2}}">
                <view style="font-weight: bold;">EXAM</view>
                <view>考试进度</view>
                <view class="icon cuIcon-timefill"></view>
            </view>
            <view class="bg-gradual-orange" catchtap="gotoNewPage" data-index="{{3}}">
                <view style="font-weight: bold;">COMMENT</view>
                <view>评价中心</view>
                <view class="icon cuIcon-messagefill"></view>
            </view>
            <view class="bg-gradual-red" catchtap="gotoNewPage" data-index="{{4}}">
                <view style="font-weight: bold;">LOOK</view>
                <view>查看教练</view>
                <view class="icon cuIcon-friendfill"></view>
            </view>
            
    </view>
    <view class="list" wx:else>
            <view class="bg-gradual-blue" catchtap="gotoOrderList">
                <view style="font-weight: bold;">LIST</view>
                <view>预约列表</view>
                <view class="icon">
                    <van-icon name="/icon/car1.png" size="35px"></van-icon>
                </view>
            </view>
            <view class="bg-gradual-purple" catchtap="gotoNewPageB" data-index="{{1}}">
                <view style="font-weight: bold;">COMMENT</view>
                <view>学员评价</view>
                <view class="icon cuIcon-communityfill"></view>
            </view>
            <view class="bg-gradual-orange" catchtap="gotoNewPageB" data-index="{{2}}">
                <view style="font-weight: bold;">LEAVE</view>
                <view>请假中心</view>
                <view class="icon cuIcon-messagefill"></view>
            </view>
            <view class="bg-gradual-pink" catchtap="gotoNewPageB" data-index="{{3}}">
                <view style="font-weight: bold;">CAR</view>
                <view>车辆信息</view>
                <view class="icon cuIcon-deliver_fill"></view>
            </view>
            <view class="bg-gradual-red" catchtap="gotoNewPageB" data-index="{{4}}">
                <view style="font-weight: bold;">LOOK</view>
                <view>查看学员</view>
                <view class="icon cuIcon-friendfill"></view>
            </view>
            
    </view>
    <view class="bottom">
        <view class="notice_head"> 
                <view>
                    <text class="cuIcon-notificationfill" style="font-size: 30px; color: #0081ff;">
                    </text>
                    <van-notice-bar scrollable text="--滴滴滴，快过来看--" speed="50"
                    style="width: 200px;" background="#fff" color="#000"/>
                </view>
                <view style=" width:80px;color: #0081ff; font-size: 16px;"
                wx:if="{{notices.length}}" bindtap="openNoticeList">
                    更多... <text class="cuIcon-right"></text>
                </view>
        </view>
        <view class="main" wx:for="{{notices}}" wx:key="id" 
        bindtap="openNotice" data-id="{{item.id}}">
                <view class="title">{{item.title}}</view>
                <van-icon name="clock-o"/>
                <text style="font-size: 12px;margin-left: 2px;">{{item.time}}</text>
        </view>
        <van-empty 
        wx:if="{{!notices.length}}"
        description="暂无公告">
        </van-empty>
    </view>
</view>