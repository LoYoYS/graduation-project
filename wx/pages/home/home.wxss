/* pages/home/home.wxss */
page,.vessel{
    width: 100%;
    height: 100%;
    background-color: rgb(240, 240, 240);
}
.imglist{
    height: 30%;
    box-shadow: 3px 3px 10px rgb(153, 153, 153);
}
.imglist image{
    width: 100%;
    height: 100%;
}
.funList{
    width: 25%;
    text-align: center;
    font-size: 20px;
    color: white;
    margin: 20px 0 auto 10px;
    border-radius: 5px;
    background-image:linear-gradient(110.01595960288273deg, rgba(48, 245, 251,1) 5.533854166666667%,rgba(23, 142, 203,1) 96.67968749999999%);
}
.middle,.bottom{
    display: flex;
    flex-wrap: wrap;
    width: 95%;
    height: 35%;
    margin: 10px auto;
    background-color: white;
    border-top: 1px solid rgba(199, 196, 196,0.5);
    border-radius: 5%;
    box-shadow: 1px 1px 10px gainsboro;
}
.item{
    /* width: 100%; */
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid gainsboro;
    /* height: 45%; */
}
.item text:nth-of-type(2){
    font-size:12px;
    color: rgb(109, 108, 108);
}
.bottom{
    height: auto;
}