/* pages/home/home.wxss */
page,.vessel{
    width: 100%;
    height: 100%;
    background-color: rgb(240, 240, 240);
}
.imglist{
    height: 30%;
    box-shadow: 3px 3px 10px rgb(153, 153, 153);
}
.imglist image{
    width: 100%;
    height: 100%;
}
.funList{
    width: 25%;
    text-align: center;
    font-size: 20px;
    color: white;
    margin: 20px 0 auto 10px;
    border-radius: 5px;
    background-image:linear-gradient(110.01595960288273deg, rgba(48, 245, 251,1) 5.533854166666667%,rgba(23, 142, 203,1) 96.67968749999999%);
}
.middle,.bottom{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    width: 95%;
    height: 35%;
    margin: 10px auto;
    background-color: white;
    border-top: 1px solid rgba(199, 196, 196,0.5);
    border-radius: 5%;
    box-shadow: 1px 1px 10px gainsboro;
}
.item,.yuyue{
    width: 50%;
    height: 50%;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid rgb(238, 238, 238);
}
.item view{
    position: relative;
    display: flex;
    flex-direction: column;
}
.item .odd_item{
    margin-right: 25px;
}
.item .even_item{
    margin-left: 25px;
}
.middle view:nth-of-type(even){
    border-left:1px solid rgb(238, 238, 238);
}
.yuyue{
    color: rgb(255, 255, 255);
    font-weight: bold;
    width: 120px;
    height: 120px;
    border: 5px solid rgb(203, 238, 243);
    background-image:linear-gradient(110.01595960288273deg, rgba(48, 245, 251,1) 5.533854166666667%,rgba(23, 142, 203,1) 96.67968749999999%);
    position: absolute;
    z-index: 999;
    border-radius: 50%;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
}
.bottom{
    height: auto;
}
[class^="cuIcon"]{
    text-align: center;
    font-size: 38px;
}