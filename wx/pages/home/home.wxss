page{
    /* background:url(https://pic1.imgdb.cn/item/63628ddd16f2c2beb16ba862.jpg) no-repeat;
    background-size: cover; */
    background-image: linear-gradient(rgb(0, 195, 254),rgb(61,81,252));
}
.top{
    width: 100%;
    position: relative;
    color: white;
    font-size: 25px;
    font-weight: bold;
    letter-spacing: 2px;
    box-sizing: border-box;
    padding: 30rpx;
    height: 50%;
    background-color:transparent;
}
.line{
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: space-between;
    opacity: 0.85;
    right: 30rpx;
    bottom: 10%;
}
.line view:first-child,.line view:last-child{
    width: 10px;
    height: 90px;
    border-radius: 10px;
    margin: 0px 5px;
    background-color: white;
}
.line view:first-child{
    height: 50px;
}
.top>view:nth-child(5),.top>view:nth-child(5)>view{
    position: relative;
    margin-top: 20px;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.3);
}
.top>view:nth-child(5)>view{
    position: absolute;
    top:30%;
    margin: 0;
    z-index: 2;
    left: 100rpx;
}
.vessel{
    width: 100%;
    position: relative;
    box-sizing: border-box;
    padding-bottom: 10px;
    min-height: calc(100% - 40%);
    background-color: white;
    box-shadow: 0 -30px 40px 15px rgb(255, 255, 255);
}
.list{
    width: 100%;
    height: 200rpx;
    margin-top: 10px;
    display: flex;
    overflow-x: scroll;
    justify-content: space-between;
}
.list>view{
    width: 40%;
    height: 100%; 
    padding: 10px;
    margin: 0 10px;
    flex-shrink: 0;
    color: white;
    position: relative; 
    border-radius: 10px;
    box-sizing: border-box;
    box-shadow: 1rpx 2rpx 10px rgb(172, 171, 171);
}
.list>view>view:nth-child(2){
    font-size: 16px;
    font-weight: bold;
    letter-spacing: 2px;
}
.list .icon{
    font-size: 35px;
    position: absolute;
    bottom: 10px;
    right: 10px;
    color: white;
}
.imglist{
    width: 100%;
    height: 30%;
    background-color: white;
}
.funList{
    width: 25%;
    height: 5%;
    left: 10px;
    top: -10%; 
    display: flex;
    color: white; 
    font-size: 14px;
    font-weight: bold;
    position: absolute;
    border-radius: 10px;
    align-items: center;
    justify-content: center;
    background-image: linear-gradient(rgb(0, 214, 252),rgb(61,81,252));
}
.bottom{
    position: relative;
    display: flex;
    flex-wrap: wrap;
    width: 95%;
    min-height: 40%;
    margin: 30px auto;
    padding: 8px;
    border-radius: 20rpx;
    box-sizing: border-box;
    justify-content: center;
    background-color: white;
    box-shadow: 1px 1px 5px gainsboro;
}
.notice_head,.notice_head>view{
    width: 100%;
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
}
.main{
    width: 100%;
    box-sizing: border-box;
    padding: 5px;
    margin: 5px 0;
    border-bottom: 1px solid rgb(228, 228, 228);
}
.main .title{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 16px;
}
