.item,.item view:first-child{
    display: flex;
    align-items: center;
    background-color: white;
}
.item{
    width: 100%;
    position: fixed;
    top: auto;
    z-index: 100;
    box-sizing: border-box;
    padding: 10rpx;
    border-radius: 5px;
    box-shadow: 1px 1px 5px rgb(233, 233, 233);
}
.item>view:first-child{
    justify-content: center;
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
    border: 1rpx solid #0388f5;
}
.info{
    display: flex;
    height: 120rpx;
    flex-direction: column;
    justify-content: space-between;
}
.comment{
    width: 100%;
    min-height: 100px;
    box-sizing: border-box;
    border-bottom: 1px solid gainsboro;
    padding: 10px;
}
.top,.left{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.top image{
    width: 50px;
    height: 50px;
}
.bottom{
    position: relative;
    width: calc(100% - 65px);
    margin-left: 65px;
}
.praise{
    position: absolute;
    right: 0;
    bottom:-2px;
}
.van-loading{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.clearFix::after,.clearFix::before{
    content: '';
    height: 60px;
    clear: both;
    display: block;
}