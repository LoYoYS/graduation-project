.swiper{
    width: 100%;
    display: flex;
    height: 100rpx;
    overflow-x: scroll;
}
.swiper-item{
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 25%;
    height: 100%;
    flex-shrink: 0;
    border-radius: 10rpx;
}
.active{
    background-image: linear-gradient(112.15334473777807deg, rgba(48, 245, 251,1) 5.533854166666667%,rgba(23, 142, 203,1) 96.67968749999999%);
    color: white;
}
.swiper-item text:nth-child(2){
    font-size: 25rpx;
}