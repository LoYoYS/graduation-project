.order_item,.comment_item{
    width: 95%;
    height: 270rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content:center;
    margin: 20px auto;
    box-sizing: border-box;
    border-radius: 20rpx;
    padding: 20rpx 40rpx;
    background-color: white;
    border: 1rpx solid #469ef7;

}
.time{
    position: absolute;
    width: 80%;
    top: -10rpx;
    left: 50%;
    transform: translateX(-50%);
    font-weight: bold;
}
.btn{
    position: absolute;
    right: 10rpx;
    bottom: 40%;
}
.van-button{
    width: 140rpx;
    height: 60rpx !important;
    padding: 0 !important;
    margin: 0 10rpx;
}
.van-loading{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.van-dialog__button button{
    height: 100rpx !important;
    margin: 0 !important;
}
.comment{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 100%;
    height: 280px;
    box-sizing: border-box;
    padding: 20rpx;
}
.comment view:nth-child(3){
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.coachInfo{
    display: flex;
    height: 100rpx;
}
.coachInfo image{
    width: 80rpx;
    height: 100rpx;
}
.info{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.van-cell{
    border-radius: 6px;
    background-color: #e9e9e9 !important;
    padding: 10rpx !important;
    height: 250rpx;
}
.van-field__body{
    border-radius: 6px;
    align-items: baseline !important;
}
.van-field__body textarea{font-size: 15px !important;}

.comment_item{
    height: auto;
    width: 95%;
    padding: 10rpx;
}
.rate{
    width: 95%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10rpx auto;
}
.order_content{
    display: flex;
    align-items: center;
    height: 50px;
    border-radius: 10rpx;
    background-color: rgb(236, 236, 236);
}
.delete{
    text-align: right;
    margin-top: 20rpx;
}