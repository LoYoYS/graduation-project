.box{
    width: 100%;
    height: 100%;
}
.item{
    width: 100%;
    height: 130px;
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 5px 0px;
    border-bottom: 1rpx solid rgb(190, 190, 190);
}
.info,.detail_info{
    width: 100%;
    padding: 10px;
    min-height: 300px;
}
.basic_info{
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 80%;
}
.detail_info>view:first-child{
    display: flex;
    padding-right: 10px;
    justify-content: space-between;
}
.btn .van-button{
    color: white !important;
    width: 100% !important;
    height: 35px !important;
}
.out_circle,.inner_circle{
    width: 75px;
    height: 75px;
    display: flex;
    border-radius: 50%;
    align-items: center;
    border: 1px solid;
    justify-content: center;
}
.inner_circle{
    width: 60px;
    height: 60px;
    animation: turn 5s linear infinite;
}
.inner_circle>text{
    text-align: center;
}
.images{
    height: 100%;
    width: 210px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.images>view>image{
    height: 100px;
    width: 100px;
}
.add .van-button{
    position: fixed !important;
    height: 50px;
    bottom: -1rpx;
    left: 50%;
    width: 100%;
    transform: translateX(-50%);
}
.radiogroup{
    width: 100%;
    display: flex;
    justify-content: space-around;
}
radio .wx-radio-input.wx-radio-input-checked{
    border-color: #0081ff !important;
    background: #0081ff !important;
 }
 @keyframes turn{
     0%{transform: rotateZ(0deg);}
     100%{transform: rotateZ(360deg);}
 }
 .van-loading{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}