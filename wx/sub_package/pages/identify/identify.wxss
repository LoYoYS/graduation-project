.vessel{
    width: 100%;
    height: 70%;
    display: flex;
    box-sizing: border-box;
    padding: 10px;
    justify-content: center;
}
.card{
    width: 100%;
    margin-top: 100px;
    text-align: center;
}
.card_info{
    width: 80%;
    height: 100px;
    margin: 20px auto;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: space-around;
    border-radius: 10px;
}
.info{
    width: 100%;
    height: 80%;
    box-sizing: border-box;
    padding: 5px;
    text-align: center;
    margin-top: 100px;
    border-radius: 10px;
}
.van-cell{
    height: 55px;
    border-bottom: 1rpx solid #aaaaaa;
}
.info .van-button{
    margin-top: 20px;
    width: 95%;
    color: white !important;
    border-radius: 25px !important;
    background-image: linear-gradient(rgb(0, 214, 252),rgb(61,81,252)) !important;
}
.van-field__label{
    font-size: 16px;
    color: #0081ff !important;
}
.van-field__control{
    font-size: 16px;
}
.van-field__error-message{
    position: absolute;
    bottom: -5px;
}