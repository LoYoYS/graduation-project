page{
    background-image: linear-gradient(rgb(0, 214, 252),rgb(61,81,252));
    overflow: hidden;
}
.commentList{
    height: calc(90% - 60px);
    overflow-y: scroll;
    margin-top: 18%;
    border-radius: 60rpx 60rpx 0 0;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title{
    color: #0984e3;
    width: 100%;
    position: sticky;
    top: 0px;
    z-index: 11;
    text-align: center;
    background-color: white;
    font-weight: bold;
    font-size: 18px;
    border-bottom: 1px solid gainsboro;
    box-sizing: border-box;
    border-radius: 60rpx 60rpx 0 0;
    padding: 20px;
}
.item{
    width: 100%;
    min-height: 100px;
    box-sizing: border-box;
    border-bottom: 1px solid gainsboro;
    padding: 10px;
}
.top,.left{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.top image{
    width: 50px;
    height: 50px;
}
.bottom{
    position: relative;
    width: calc(100% - 65px);
    margin-left: 65px;
}
.praise{
    position: absolute;
    right: 0;
    bottom:-2px;
}
.van-loading{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.tip{
    height: 20px;
    color: rgb(160, 160, 160);
    margin: 25px;
}