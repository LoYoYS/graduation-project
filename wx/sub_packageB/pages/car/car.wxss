.father{
    width: 100%;
    height: calc(100% - 60px);
    position: relative;
    background-color: rgb(221, 221, 221);
}
.top{
    position: absolute;
    top: -13%;
    width: 100%;
    height: 70%;
    border-radius: 0px 0px 15% 15%;
    background-image: linear-gradient(rgb(0, 214, 252),rgb(61,81,252));
}
.card,.info{
    display: flex;
    align-items: center;
    flex-direction: column;
}
.card{
    top:35%;
    left: 50%;
    width: 80%;
    height: 60%;
    border-radius: 3%; 
    position: absolute;
    overflow: hidden; 
    transform: translate(-50%);
    background-color: rgb(255,255,255);
}
.info image{
    width: 100%;
    height: 200px;
    position: absolute;
    top: 0;
    border-radius: 3% 3% 0 0;
}
.text{
    top: 220px;
    position: absolute;
}
.text>view{
    width: 150px;
    margin-top: 10px;
    font-size: 16px;
}
.father>view:nth-child(3),.father>view:nth-child(4){
    height: 45%;
    width: 40rpx;
    position: absolute;
    top:45%;
    background-color: white;
}
.father>view:nth-child(3){
    border-radius: 0 10px 10px 0;
    left: 0;
}
.father>view:nth-child(4){
    border-radius: 10px 0 0 10px;
    right: 0;
}
.van-loading{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
