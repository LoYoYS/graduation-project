<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuan.mapper.SubjectMapper">

    <insert id="insert" parameterType="com.yuan.domain.Student">
        insert into subject values(null,#{phone},#{type},#{subject.a},#{subject.b},#{subject.c},#{subject.d})
    </insert>
    <update id="update" parameterType="com.yuan.domain.Student">
        update subject set subject_a =#{subject.a},subject_b =#{subject.b},subject_c =#{subject.c},
                           subject_d =#{subject.d}
    </update>
    <delete id="delete" parameterType="com.yuan.domain.Student">
        delete from subject where phone =#{phone} and type =#{type}
    </delete>
    <delete id="deleteList" parameterType="java.util.List">
        delete from subject where phone in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.phone}
        </foreach>
    </delete>
</mapper>
